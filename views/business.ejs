<head>
    <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="./css/profile.css" />
    <link rel="stylesheet" href="./css/modal.css" />
    <link rel="stylesheet" href="./css/submitButton.css" />
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'>
  </head>
  <html>
  <body>
<div class="container">
   <div class="profile-header">
        <div class="profile-img">
               <img src="./bg.jpg" width="200" alt="Profile Image" />
             <div class="circle" style="background: #<%=user.iconColor %>">
                 <span><%=user.userName.split("")[0].toUpperCase() %></span>
             </div>
        </div>
        <div class="profile-nav-info">
          <h3 class="user-name"><%=user.email %></h3>
          <div class="address">
            <!-- <p id="state" class="state">New York,</p>
        <span id="country" class="country">USA.</span> -->
          </div>
        </div>
   </div>
    <div class="main-bd">
        <div class="left-side">
          <div class="profile-side">
            <div class="user-bio">
              <span><%=user.userName %></span>
              <h3>Your Bio</h3>
              <p class="bio">
                Lorem ipsum dolor sit amet, hello how consectetur adipisicing
                elit. Sint consectetur provident magni yohoho consequuntur,
                voluptatibus ghdfff exercitationem at quis similique. Optio,
                amet!
              </p>
            </div>
             <div class="profile-btn">
              <a class="button" href="/logout">
              <button class="createbtn" id="five">
                LOGOUT
              </button>
              </a>
            </div>
            <div class="user-rating">
              <h3 class="rating"><%= average %></h3>
              <div class="rate">
                <div class="star-outer">
                  <div class="star-inner">
                    <% for(let i = 0; i < average; i ++){ %>
                        <span>‚≠êÔ∏è</span>
                   <% } %>
                  </div>
                </div>
                <span class="no-of-user-rate"><span><%=myReviews.length %></span>&nbsp;&nbsp;reviews</span
                >
              </div>
            </div>
          </div>
        </div>
        <div class="right-side">
          <div class="nav">
            <ul>
              <li onclick="tabs(0)" class="user-post active" id="newsfeed">
                Newsfeed
              </li>
              <li onclick="tabs(1)" class="user-review">My Reviews</li>
            </ul>
          </div>
          <!-- this is where we loop through all the reviews -->
          <div class="profile-body">
            <div class="profile-posts tab">
                <div class="newsfeed">
                <% for(let i =0; i < allReviews.length; i++){%>
                    <table class="allReviews">
                    <tr>
                        <th><%= allReviews[i].business %></th>
                    </tr>
                <tr class="post">
                      <th><a href="/post/<%= allReviews[i]._id%>">
                  <img class="img-fluid" src="<%= allReviews[i].image%>">
                     </a>
                    </th>
                     <th>
                 <span>posted by: <a href="/TO-THEIR-PAGE"><%= allReviews[i].userName %></a></span>
                     </th>
                <th class="description">
                  <span><%= allReviews[i].description %></span>  <form
                  action="/post/likePostInNewsfeed/<%= allReviews[i].id %>?_method=PUT"
                  method="POST"
                >
                     <button value="<%=allReviews[i]._id%>" class="like" type="submit">‚ù§Ô∏è   <span><%= allReviews[i].likes %></span></button>
                </form>
                </th>
                <th>
                  <% for (let r = 0; r < allReviews[i].rating; r++){ %>
                    <span>‚≠êÔ∏è</span>
                  <% } %>
                  </th>
                </tr>
                <tr>
    </tr>
                      <% if(allReviews[i].userName == user.userName){ %>
                       <form
          action="/post/deletePost/<%= allReviews[i].id %>?_method=DELETE"
          method="POST">
                      <button class="like" type="submit">üóëÔ∏è</button>
                         </form>
                           <% } %>
                </div>
            </table>
                <% }%>
        </div>
            </div>
            <!-- this is where we will loop through all of the business's reviews -->
            <div class="profile-reviews tab">
              <table>
                <tr>
                    <th>Customer</th>
                    <th>Review</th>
                    <th>Date</th>
                    <th>Rating</th>
                    <th>Upvotes</th>
                </tr>
              <% for(let i =0; i < myReviews.length; i++){%>
             <tr>
                <td><%= myReviews[i].userName %></td>
                <td><%= myReviews[i].description %></td>
                <td><%= myReviews[i].createdAt %></td>
                <td><%= myReviews[i].rating %></td>
                <td><%= myReviews[i].likes %></td>
             </tr>
                <% } %>
            </table>
            </div>
            <div class="profile-settings tab">
              <div class="account-setting">

                <h2>Tell us about your hair</h2>
                <form action="/post/createRec" method="post">
                  <label for="hair">Choose your Hair Type</label>
                  <select name="hair">
                    <option>Curly (Type 2A)</option>
                    <option>Curly (Type 2B)</option>
                    <option>Curly (Type 2C)</option>
                    <option>Curly (Type 3A)</option>
                    <option>Curly (Type 3B)</option>
                    <option>Curly (Type 3C)</option>
                    <option>Curly (Type 4A)</option>
                    <option>Curly (Type 4B)</option>
                    <option>Curly (Type 4C)</option>
                    <label for="problems">Problems</label>
                  </select>
                  <select name="problems" multiple>
                    <option>Dry Hair</option>
                    <option>Tangled Hair</option>
                    <option>Split Ends</option>
                    <option>Balding</option>
                  </select>
                  <label for="goals">Goals</label>
                  <select name="goals" multiple>
                    <option>Hair Growth</option>
                    <option>Healthy Ends</option>
                    <option>Moisture</option>
                    <option>Volume</option>
                  </select>
                  <div class="submitBtn">
  <button type="submit" class="btn-send" data-label="Send" data-success="Sent!"></button>  
</div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
         
      
  
</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/profile.js"></script>
      <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
      <script  src="js/submitButton.js"></script>
</body>
</html>
