<head>
  <link rel="stylesheet" href="../css/post.css"/>
</head>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <!-- Post details -->
      <h2><%= post.title %></h2> 
      <div class="img">
        <img class="img-fluid" src="<%= post.image%>" />
        <div class="row justify-content-between">
          <!-- Like button -->
          <form class="col-1" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
            <button class="btn btn-primary fa fa-heart" type="submit">❤️</button>
            
          </form>
          <% if (post.user == user.id) { %>
            <!-- Delete button (visible to post owner) -->
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
          <% } %>
        </div>
      </div>


      

      <!-- Post caption -->
      <p><%= post.caption %></p>

      <!-- Comment form -->
      <form action="/post/comments" method="POST">
        <div class="col-3 mt-5">
          <input type="text" name="comment" placeholder="Write a comment">
          <input type="hidden" name="postId" value="<%= post.id %>">
          <button type="submit">Submit Comment</button>
        </div>
      </form>
    </div>

    <div class="col-6 mt-5">
      <!-- Return to profile button -->
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
    </div>
  </div>
</div>
